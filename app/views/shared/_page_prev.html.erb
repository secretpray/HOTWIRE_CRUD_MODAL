<% if page.prev %>
  <%= link_to pagy_url_for(page, page.prev), rel: "prev",
              class: "ml-10 flex items-center rounded-full px-4 py-2 hover:border-yellow-500 hover:text-yellow-500 hover:opacity-100 border-2 opacity-30 hidden first-child:block",
              data: { turbo_rendering: "prepend" } do %>
    <span class=''>
    </span>
    <span class=''>
      <%= page.prev %>
    </span>
  <% end %>
<% else %>
    <%= link_to ' '.html_safe,
                'javascript:void(0);',
                class: "ml-10 flex w-11 items-center rounded-full px-4 py-2 hover:border-yellow-500 hover:text-yellow-500 hover:opacity-25 cursor-default border-2 opacity-30 hidden first-child:block",
                disabled: true %>
<% end %>
