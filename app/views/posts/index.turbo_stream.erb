<%#= turbo_stream.append(target: "post_list", partial: 'posts/post', collection: @posts, as: :post, locals: { posts: @posts}, formats: [:html]) %>
<turbo-stream action="append" target="post_list">
  <template>
    <%= render partial: 'posts/post', collection: @posts, as: :post, locals: { posts: @posts}, formats: [:html] %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="prev-page-link">
  <template>
    <%= render 'shared/page_prev', page: @page %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="next-page-link">
  <template>
    <%= render 'shared/page_next', page: @page %>
  </template>
</turbo-stream>
