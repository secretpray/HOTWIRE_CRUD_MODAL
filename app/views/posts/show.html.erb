<%= turbo_frame_tag :post do %>
  <div class="mx-auto md:w-2/3 w-full max-w-6xl mt-16 flex flex-col justify-center">
    <div class="m-auto w-full max-w-2xl border-2 p-4 rounded-xl border-opacity-50"
      style="border-left-color: <%= status_color(@post.status) %>; border-left-width: 8px;">

      <%= render @post %>

      <div class="mt-4 mx-3">
        <% if is_author?(@post, current_user) %>
          <%= link_to 'Edit post', edit_post_path(@post), data: { turbo_frame: :modal }, class: "rounded-lg py-3 px-5 bg-yellow-400 text-lg filter saturate-150 contrast-75 text-yellow-800 hover:opacity-80 transition duration-300" %>
          <div class="inline-block ml-2">
            <%= button_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" },
            class: "p-2 px-5 bg-transparent border-2 border-grey-300 text-grey-300 text-lg filter saturate-150 contrast-75 opacity-50 rounded-lg hover:border-yellow-400 hover:text-yellow-400 hover:opacity-100 focus:border-4 focus:border-yellow-300 focus:opacity-90 transition duration-300 cursor-pointer" %>
          </div>
        <% end %>
        <%= link_to 'â—„ Back', posts_path,
            data: { turbo_frame: :_top },
            class: "rounded-lg py-2 px-5 text-lg text-yellow-400 filter saturate-150 contrast-75 font-medium hover:underline hover:opacity-80 transition duration-300 float-right" %>
      </div>
    </div>
  </div>
<% end %>

<h4>Comments: <%= @comments.count %></h4>
<div class="mt-3 mb-5">
  <% if user_signed_in? %>
    <%= render partial: 'comments/form', locals: {comment: Comment.new, commentable: @post } %>
  <% else %>
    <%= link_to 'Sign up', new_user_registration_path %> or <%= link_to 'login', new_user_session_path %> to comment
  <% end %>
</div>

<div class="mt-4 mb-5">
  <% @comments.each do |comment| %>
    <div class="mt-3 mb-5 ml-12 px-4 flex justify-between items-center bg-gray-700">
      <div class="text-xl text-gray-200 border-l-4 border-gray-400 pl-4 py-2 my-2">
        <%= comment.body %>
      </div>
      <div class='text-xs mx-3 text-gray-400'>
        <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user&.email %>
      </div>
    </div>
  <% end %>
</div>
