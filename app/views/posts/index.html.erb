<%= turbo_stream_from :posts %>

<% unless @posts.present? %>
  <div class="w-full justify-center">
    <div class="flex justify-between mt-10">
      <div>
        <h1 class="font-bold text-4xl text-gray-400 text-center w-full inline-block">
          No posts to display! Do you want to add?
        </h1>
      </div>
      <%= render 'shared/user_auth' %>
    </div>
  <div>
<% else %>
  <div class="w-full mx-auto">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h1 class="text-lg font-bold text-4xl p-2 mt-5" id='posts_counter'>
          Post<%= @posts.size > 1 ? 's: ' : ': ' %><%= @posts.size %>
        </h1>
      </div>
      <%= render 'shared/user_auth' %>
    </div>
    <hr>
      <%= turbo_frame_tag :posts do %>
      <%#= render 'posts/posts', posts: @posts, user: current_user %>
        <div id="posts" class="grid gap-5 grid-cols-2 mt-4">
          <%= render partial: 'posts/post', collection: @posts, as: :post, locals: { user: current_user } %>
        </div>
      <% end %>
  </div>
<% end %>
