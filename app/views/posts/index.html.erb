<%= turbo_stream_from 'posts' %>
<% unless @posts.present? %>
    <div class="w-full justify-center">
      <div class="flex justify-between mt-10">
        <div>
          <h1 class="font-bold text-4xl text-gray-400 text-center w-full inline-block">
            No posts to display! Do you want to add?
          </h1>
        </div>
        <%= render 'shared/user_auth' %>
      </div>
    <div>
  <% else %>
    <div class="w-full mx-auto">
      <div class="mx-8 flex justify-between items-center mb-4">
        <div class='flex items-center'>
          <%= render 'select_form' %>
          <h1 class="text-lg font-bold text-4xl" id='posts_counter'>
            <%= pluralize(@posts.count, "Post").split().reverse.join(': ') %>
          </h1>
        </div>
        <%= render 'posts/search', posts: @posts %>
        <%= render 'shared/user_auth' %>
      </div>
      <hr>
      <%= turbo_frame_tag 'posts' do %>
        <%= render 'shared/loader' %>
        <div class="flex flex-row my-5">
          <div class='flex flex-wrap justify-evenly gap-3 frame-loading-hide' id="post_list">
            <%# @posts = @posts.take(10) %>
            <%= render @posts %>
          </div>
        </div>
      <% end %>
    </div>
<% end %>
