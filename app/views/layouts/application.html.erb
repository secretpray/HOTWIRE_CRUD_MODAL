<!DOCTYPE html>
<html>
  <%= render 'shared/header' %>
  <body class='antialiased text-gray-200 bg-gray-800 h-min-screen'
        data-controller='modal modal-user'
        data-controller-name='<%= controller_name %>'
        data-action-name='<%= action_name %>'>
    <!-- container -->
    <div class="max-w-7xl w-full mx-auto">
      <!-- Flash container -->
      <%= turbo_frame_tag :flash %>
      <!-- Tooltip for Home button container -->
      <%= render 'shared/service' %>
      <!-- End tooltip for Home button container -->
      <%= yield %>
      <%# Footer -> Endless scroll %>
      <%= render 'shared/footer' %>
    </div>
    <%= turbo_frame_tag 'modal', data: { modal_target: 'frame' } %>
    <%= turbo_frame_tag :user_modal, data: { modal_user_target: 'form_frame' } %>
  </body>
</html>
